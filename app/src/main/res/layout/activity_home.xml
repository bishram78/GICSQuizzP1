                    android:layout_weight="1"
                    android:onClick="optionsEvent"
                    android:text="@string/option_5_d" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/id_btn_show_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="showScore"
            android:padding="@dimen/margin_padding_16dp"
            android:text="@string/btn_txt_see_score"
            android:background="@drawable/button_selector_enabled"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>