                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_padding_8dp"
                    android:onClick="optionsEvent"
                    android:text="@string/option_2_c" />

                <CheckBox
