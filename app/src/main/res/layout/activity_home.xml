                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DD000000"
                    android:padding="@dimen/margin_padding_12dp"
                    android:text="@string/text_ques_fifth"
                    android:textColor="@color/colorWhite"
                    android:lines="3"
                    android:textSize="@dimen/text_size_18sp"
                    app:fontFamily="sans-serif-condensed" />

                <CheckBox
                    android:id="@+id/option_5_a"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_padding_8dp"
                    android:layout_marginTop="@dimen/margin_padding_16dp"
                    android:layout_weight="1"
                    android:onClick="optionsEvent"
                    android:text="@string/option_5_a" />

                <CheckBox
                    android:id="@+id/option_5_b"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_padding_8dp"
                    android:onClick="optionsEvent"
                    android:text="@string/option_5_b" />

                <CheckBox
                    android:id="@+id/option_5_c"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_padding_8dp"
                    android:onClick="optionsEvent"
                    android:text="@string/option_5_c" />

                <CheckBox
                    android:id="@+id/option_5_d"
