                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_padding_8dp"
                    android:layout_marginBottom="@dimen/margin_padding_16dp"
                    android:layout_weight="1"
                    android:onClick="optionsEvent"
                    android:text="@string/option_2_d" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginEnd="@dimen/margin_padding_16dp"
            android:layout_marginStart="@dimen/margin_padding_16dp"
            android:layout_marginTop="@dimen/margin_padding_16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/google_scholarship_india_badge_hd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_for_options"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DD000000"
                    android:padding="@dimen/margin_padding_12dp"
                    android:text="@string/text_ques_third"
                    android:textColor="@color/colorWhite"
                    android:lines="3"
                    android:textSize="@dimen/text_size_18sp"
                    app:fontFamily="sans-serif-condensed" />

                <CheckBox
                    android:id="@+id/option_3_a"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_padding_8dp"
                    android:layout_marginTop="@dimen/margin_padding_16dp"
                    android:layout_weight="1"
                    android:onClick="optionsEvent"
                    android:text="@string/option_3_a" />

                <CheckBox
                    android:id="@+id/option_3_b"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_padding_8dp"
                    android:onClick="optionsEvent"
                    android:text="@string/option_3_b" />

                <CheckBox
                    android:id="@+id/option_3_c"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_padding_8dp"
                    android:onClick="optionsEvent"
                    android:text="@string/option_3_c" />

                <CheckBox
                    android:id="@+id/option_3_d"
                    android:layout_width="wrap_content"
