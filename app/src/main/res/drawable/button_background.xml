<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="4dp"
                android:color="@android:color/black" />

            <solid
                android:color="#8F66C6" />

            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />

            <corners
                android:radius="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@android:color/black" />

            <solid
                android:color="#F28F66C6" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <corners
                android:radius="0dp" />
        </shape>
    </item>
</selector>