<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">

            <solid android:color="@android:color/transparent"/>
            <corners
                android:topLeftRadius="@dimen/margin_padding_8dp"
                android:topRightRadius="@dimen/margin_padding_8dp"/>
        </shape>
    </item>

    <item android:top="@dimen/margin_padding_1px"
        android:left="@dimen/margin_padding_1px"
        android:right="@dimen/margin_padding_1px">
        <shape
            android:shape="rectangle">

            <solid android:color="#77000000"/>
            <corners
                android:topLeftRadius="@dimen/margin_padding_8dp"
                android:topRightRadius="@dimen/margin_padding_8dp"/>
        </shape>
    </item>
</layer-list>
